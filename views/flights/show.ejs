<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th>FlightNo</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Departs</th>
        <th></th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= flight.flightNo %></td>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.departs.toISOString().slice(0, 16) %></td>
        <td><a href="/flights/<%= flight._id %>/edit">EDIT</a></td>
        <td>
          <form
          action="/flights/<%= flight._id %>?_method=DELETE"
          method="POST"
          >
            <button>X</button>
          </form>
        </td>
      </tr>
    </tbody>
  </table>
  <h2>Tickets</h2>
  <form
  class="ticket-form"
  action="/flights/<%= flight._id %>/tickets"
  method="POST"
  autocomplete="off"
  >
  <label>
    Seat:
    <input name="seat" required pattern="[A-F][1-9]\d?" placeholder="A1 - F99">
  </label>
  <label>
    Price:
    <input type="text" name="price" required placeholder="Enter Price">
  </label>
    <button type="submit">Purchase Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Bought</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.createdAt.toISOString().slice(0, 16) %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet - buy one sonn!</h3>
  <% } %>
</main>

<%- include('../partials/footer') %>